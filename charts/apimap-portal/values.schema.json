{
  "$schema": "http://json-schema.org/schema#",
  "title": "Apimap.io Chart JSON Schema",
  "type": "object",
  "properties": {
    "urls": {
      "type": "object",
      "properties": {
        "api": {
          "title": "API URL",
          "type": "string"
        },
        "developer": {
          "title": "Developer Portal URL",
          "type": "string"
        }
      },
      "required": ["api", "developer"]
    },
    "branding": {
      "type": "object",
      "properties": {
        "title": {
          "title": "Title of the startpage",
          "type": "string",
          "default": "Apimap.io"
        }
      }
    },
    "exposure": {
      "type": "object",
      "properties": {
        "nodePort": {
          "type": "object",
          "properties": {
            "enabled": {
              "title": "Use nodeport",
              "type": "boolean",
              "default": false
            }
          },
          "required": ["enabled"]
        },
        "ingress": {
          "type": "object",
          "properties": {
            "enabled": {
              "title": "Use Ingress",
              "type": "boolean",
              "default": false
            },
            "host": {
              "title": "Domain / hostname to be used",
              "type": "string"
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["nodePort", "ingress"]
    }
  }
}