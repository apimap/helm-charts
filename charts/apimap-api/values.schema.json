{
  "$schema": "http://json-schema.org/schema#",
  "title": "Apimap.io Chart JSON Schema",
  "type": "object",
  "properties": {
    "log": {
      "type": "object",
      "properties": {
        "level": {
          "title": "Log level",
          "type": "string",
          "default": "info",
          "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL", "OFF"]
        },
        "endpoints":{
          "type": "object",
          "properties": {
            "statistics":{
              "type": "object",
              "properties": {
                "enabled": {
                  "title": "Enable statistics (micrometer) output",
                  "type": "boolean",
                  "default": false
                }
              }
            },
            "health":{
              "type": "object",
              "properties": {
                "enabled": {
                  "title": "Enable health endpoints",
                  "type": "boolean",
                  "default": false
                }
              }
            }
          }
        }
      },
      "required": ["level"]
    },
    "storage": {
      "type": "object",
      "properties": {
        "mongodb": {
          "type": "object",
          "properties": {
            "uri": {
              "title": "MongoDB Connection String defined using the 'Connection String URI Format' e.g. mongodb://apimapUser:<password>@localhost:27017/apimap",
              "type": "object",
              "properties": {
                "secretKey": {
                  "title": "Name of the secret to be used",
                  "type": "string",
                  "default": ""
                },
                "secretName": {
                  "title": "Name of the key inside the secret to be used",
                  "type": "string",
                  "default": ""
                }
              }
            },
            "enabled": {
              "title": "Enable MongoDB (NoSQL) support",
              "type": "boolean",
              "default": false
            },
            "databaseName": {
              "title": "The database to be used",
              "type": "string",
              "default": "apimap"
            }
          },
          "required":["enabled"]
        },
        "nitrite": {
          "type": "object",
          "properties": {
            "mountingPoint": {
              "title": "Root folder used to store all NoSQL files",
              "type": "string",
              "default": "/var/apimap"
            },
            "enabled": {
              "title": "Enable NITRITE (NoSQL) support",
              "type": "boolean",
              "default": false
            },
            "storageClass": {
              "title": "StorageClass to be used",
              "type": "string"
            }
          },
          "required":["enabled"]
        }
      }
    },
    "openapi": {
      "type": "object",
      "properties":{
        "enabled": {
          "title": "Enable OpenAPI support",
          "description": "If enabled a openapi document is available at <base url>/documentation/openapi3",
          "type": "boolean",
          "default": false
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "copyright": {
          "title": "Copyright notice on the content of the catalog",
          "type": "string"
        },
        "faq": {
          "title": "Very short description and URL to the place the organization has stored information about this solution, implementation and usage.",
          "type": "string"
        },
        "support": {
          "title": "Very short description and URL to where support for this solution is to be found.",
          "type": "string"
        }
      },
      "required": ["copyright", "faq", "support"]
    },
    "resources":{
      "type": "object",
      "properties": {
        "pods": {
          "type": "object",
          "properties": {
            "replicas": {
              "title": "Number of pods to be used if mongodb is the storage system",
              "type": "number",
              "default": "2"
            }
          }
        }
      }
    },
    "exposure": {
      "type": "object",
      "properties": {
        "nodePort": {
          "type": "object",
          "properties": {
            "enabled": {
              "title": "Use nodeport",
              "type": "boolean",
              "default": false
            }
          },
          "required": ["enabled"]
        },
        "ingress": {
          "type": "object",
          "properties": {
            "enabled": {
              "title": "Use Ingress",
              "type": "boolean",
              "default": false
            },
            "host": {
              "title": "Domain / hostname to be used",
              "type": "string"
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["nodePort", "ingress"]
    }
  }
}